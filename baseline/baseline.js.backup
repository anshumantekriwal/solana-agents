    // Optimized quote request with better parameters
    const quoteParams = new URLSearchParams({
      inputMint: fromToken,
      outputMint: toToken,
      amount: rawAmount.toString(),
      slippageBps: slippageBps.toString(),
      onlyDirectRoutes: 'false', // Allow multi-hop for better rates
